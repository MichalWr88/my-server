{
    "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
    "git": {
        "commitMessage": "chore: release v${version}",
        "requireBranch": "main",
        "requireCleanWorkingDir": false,
        "requireUpstream": true,
        "push": true,
        "tag": true,
        "tagName": "v${version}"
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": false
    },
    "hooks": {
        "before:init": [
            "npm run build"
        ],
        "after:bump": "echo Successfully bumped version to ${version}"
    }
}